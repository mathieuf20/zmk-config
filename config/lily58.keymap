#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>


// Layers
#define _DEFAULT	0
#define _LOWER		1
#define _RAISE		2
#define _UPPERCASE	3
#define _SYSTEM		4
#define _RSYSTEM	5

/ {
	keymap {
		compatible = "zmk,keymap";

/* default_layer | _DEFAULT
 * ,-----------------------------------------.                    ,-----------------------------------------.
 * |  /   |   1  |   2  |   3  |   4  |   5  |                    |   6  |   7  |   8  |   9  |   0  | BSPC |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * | Tab  |   q  |   w  |   e  |   r  |   t  |                    |   y  |   u  |   i  |   o  |   p  |  -   |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * | ***1 |   a  |   s  |   d  |   f  |   g  |-------.    ,-------|   h  |   j  |   k  |   l  |   ;  |  è   |
 * |------+------+------+------+------+------|   (   |    |    )  |------+------+------+------+------+------|
 * |LShift|   z  |   x  |   c  |   v  |   b  |-------|    |-------|   n  |   m  |   ,  |   .  |   é  |RShift|
 * `-----------------------------------------/       /     \      \-----------------------------------------'
 *                   | LAlt | LGUI |LOWER | /Space  /       \Enter \  |RAISE |BackSP| RALT |
 *                   |      |      |      |/       /         \      \ |      |      |      |
 *                   `----------------------------'           '------''--------------------'
 * ***1: LCTRL when held, ESC when tapped
 */
 		default_layer {
			bindings = <
&kp GRAVE		&kp N1	&kp N2	&kp N3		&kp N4		&kp N5							&kp N6      &kp N7   &kp N8    &kp N9  &kp N0   &kp BSPC
&kp TAB			&kp Q 	&kp W 	&kp E		&kp R 		&kp T							&kp Y       &kp U    &kp I     &kp O   &kp P    &kp MINUS
&mt LCTRL ESC	&kp A 	&kp S 	&kp D		&kp F 		&kp G							&kp H       &kp J    &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT		&kp Z 	&kp X 	&kp C		&kp V 		&kp B       &kp LPAR   &kp RPAR &kp N       &kp M    &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                				&kp LALT	&kp LGUI	&mo _LOWER  &kp SPACE  &kp RET  &mo _RAISE  &kp BSPC &kp RALT
			>;
		};
/* lower_layer | _LOWER 
 * ,-----------------------------------------.                    ,-----------------------------------------.
 * |SYSTEM|      |      |      |      |      |                    |      |      |      |      |      |DELETE|
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |  F1  |  F2  |  F3  |  F4  |  F5  |  F6  |                    |  F7  |  F8  |  F9  | F10  | F11  | F12  |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |   /  |   !  |   @  |   #  |   $  |   %  |-------.    ,-------|   ?  |   &  |   *  |   '  |   "  |   \  |
 * |------+------+------+------+------+------|   [   |    |    ]  |------+------+------+------+------+------|
 * |   ~  |   «  |   »  |      |      |      |-------|    |-------|   `  |   _  |   +  |   ^  |   ç  |   à  |
 * `-----------------------------------------/       /     \      \-----------------------------------------'
 *                   |      |      |      | /       /       \SEnter\  |UPPER |DELETE| RGUI |
 *                   |      |      |      |/       /         \      \ | -CASE|      |      |
 *                   `----------------------------'           '------''--------------------'
 */
		lower_layer {
			bindings = <
&mo _SYSTEM		&trans		&trans		&trans		&trans		&trans									&trans			&trans		&trans			&trans			&trans		&kp DELETE
&kp F1			&kp F2      &kp F3		&kp F4		&kp F5		&kp F6									&kp F7			&kp F8		&kp F9			&kp F10			&kp F11		&kp F12
&kp GRAVE		&kp EXCL    &kp AT		&kp HASH	&kp DOLLAR	&kp PRCNT								&kp CARET		&kp AMPS	&kp KP_MULTIPLY	&kp LS(COMMA)	&kp LS(DOT)	&kp TILDE
&kp RA(RBKT)	&kp RA(Z)	&kp RA(X)	&trans		&trans		&trans		&kp RA(N9)	&kp RA(N0)		&kp RA(LBRC)	&kp MINUS	&kp KP_PLUS		&kp LBKT		&kp RBKT  	&kp BSLH
                                        &trans		&trans		&trans		&trans   	&kp LS(ENTER)	&mo _UPPERCASE	&kp DEL		&trans
			>;
		};
/* raise_layer | _RAISE
 * ,-----------------------------------------.                    ,-----------------------------------------.
 * |GOLCTL|   ~  |      |      |   =  |   >  |                    | Mute | Prev | Play | Next |PRTSCR|Ctrl+V|
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |      |      |      |      |      |      |                    | Vol+ | HOME | PgDn | PgUp | END  |Ctrl+C|
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |      |      |      |      |      |      |-------.    ,-------| Vol- | Left | Down |  Up  | Right|Ctrl+X|
 * |------+------+------+------+------+------|   {   |    |    }  |------+------+------+------+------+------|
 * |      |      |      |      |      |      |-------|    |-------|   ~  | RGUI |   =  |   ¨  |   Ç  |   À  |
 * `-----------------------------------------/       /     \      \-----------------------------------------'
 *                   |      |      |UPPER | /       /       \      \  |      |DELETE| RCTL |
 *                   |      |      | -CASE|/       /         \      \ |      |      |      |
 *                   `----------------------------'           '------''--------------------'
 */
		raise_layer {
			bindings = <
&trans	&kp RA(RBKT)	&trans	&trans	&kp EQUAL	&kp RA(DOT)								&kp K_MUTE		&kp    &kp    &kp    &kp    &kp LC(V)
&trans	&trans			&trans	&trans	&trans		&trans									&kp K_VOL_UP	&kp HOME  &kp PG_DN &kp PG_UP &kp END   &kp LC(C)
&trans	&trans			&trans	&trans	&trans		&trans									&kp K_VOL_DN	&kp LEFT  &kp DOWN  &kp UP    &kp RIGHT &kp LC(X)
&trans	&trans			&trans	&trans	&trans		&trans			&kp RA(N7)	&kp RA(N8)	&kp RA(RBKT)	&kp RGUI  &kp EQUAL &kp LBRC  &kp RBRC  &kp PIPE
                        		&trans	&trans		&mo _UPPERCASE	&trans		&trans		&none			&kp DEL   &kp RCTL
			>;
		};
/* uppercase
 * ,-----------------------------------------.                    ,-----------------------------------------.
 * |   |  |   !  |   @  |   #  |   $  |   %  |                    |   ?  |   &  |   *  |   (  |   )  |   ~  |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |   ~  |   Q  |   W  |   E  |   R  |   T  |                    |   Y  |   U  |   I  |   O  |   P  |      |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |      |   A  |   S  |   D  |   F  |   G  |-------.    ,-------|   H  |   J  |   K  |   L  |   :  |  È   |
 * |------+------+------+------+------+------|   <   |    |    >  |------+------+------+------+------+------|
 * |Space |   Z  |   X  |   C  |   V  |   B  |-------|    |-------|   N  |   M  |   '  |   "  |   É  |Space |
 * `-----------------------------------------/       /     \      \-----------------------------------------'
 *                   | LAlt | LGUI |LOWER | /Space  /       \Enter \  |RAISE |BackSP| RALT |
 *                   |      |      |      |/       /         \      \ |      |      |      |
 *                   `----------------------------'           '------''--------------------'
 */
		uppercase_layer {
			bindings = <
&kp RA(GRAVE)	&kp LS(N1)	&kp LS(N2)	&kp LS(N3)	&kp LS(N4)	&kp LS(N5)								&kp LS(N6)	&kp LS(N7)	&kp LS(N8)		&kp LS(N9)		&kp LS(N0)		&kp RA(RBKT)
&kp RA(RBKT)	&kp LS(Q)	&kp LS(W)	&kp LS(E)	&kp LS(R)	&kp LS(T)								&kp LS(Y)	&kp LS(U)	&kp LS(I)		&kp LS(O)		&kp LS(P)		&kp MINUS
&none			&kp LS(A)	&kp LS(S)	&kp LS(D)	&kp LS(F)	&kp LS(G)								&kp LS(H)	&kp LS(J)	&kp LS(K)		&kp LS(L)		&kp LS(SEMI)	&kp LS(SQT)
&kp SPACE		&kp LS(Z)	&kp LS(X)	&kp LS(C)	&kp LS(V)	&kp LS(B)	&kp RA(COMMA)	&kp RA(DOT)	&kp LS(N)	&kp LS(M)	&kp LS(COMMA)	&kp LS(DOT)		&kp LS(FSLH)	&kp SPACE
                    					&kp LALT	&kp LGUI	&none		&kp LS(SPACE)	&kp RET		&none		&kp BSPC	&kp RALT
			>;
		};
/* system_layer
 * ,-----------------------------------------.                    ,-----------------------------------------.
 * |      |  BT0 |  BT1 |  BT2 |  BT3 |  BT4 |                    |      |      |      |      |      | RESET|
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |      |      |      |      |      |      |                    |      |      |      |      |      |      |
 * |------+------+------+------+------+------|                    |------+------+------+------+------+------|
 * |      |      |      |      |      |      |-------.    ,-------|      |      |      |      |      |      |
 * |------+------+------+------+------+------|       |    |       |------+------+------+------+------+------|
 * |      |      |      |      |      |      |-------|    |-------|      |      |      |      |      |      |
 * `-----------------------------------------/       /     \TOGGLE\-----------------------------------------'
 *                   |      |      |      | /       /       \  BT  \  |      |      |      |
 *                   |      |      |      |/       /         \  USB \ |      |      |      |
 *                   `----------------------------'           '------''--------------------'
 */
		system_layer {
			bindings = <
&none	&bt BT_SEL 0    &bt BT_SEL 1	&bt BT_SEL 2	&bt BT_SEL 3	&bt BT_SEL 4							&none	&none	&none	&none	&none	&reset
&none	&none			&none			&none			&none			&none									&none	&none	&none	&none	&none	&none
&none	&none			&none			&none			&none			&none									&none	&none	&none	&none	&none	&none
&none	&none			&none			&none			&none			&none			&none	&none			&none	&none	&none	&none	&none	&none
                    					&none			&none			&none			&none	&out OUT_TOG	&none	&none	&none
			>;
		};
/* restricted_system_layer
